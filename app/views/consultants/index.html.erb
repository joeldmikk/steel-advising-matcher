<p id="notice"><%= notice %></p>

<h1>Consultants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Talents</th>
      <th>Clients</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @consultants.each do |consultant| %>
      <tr>
        <td><%= consultant.name %></td>
        <td><%#= consultant.email %></td>
        <td><%#= consultant.notes %></td>
        <td> 
          <%= react_component("TalentMatrix", { mode: 'inline', selected: consultant&.talents, context: consultant.id }) %>
        </td>
        <td><%= consultant.clients.map(&:name) %></td>
        <td><%= link_to 'Show', consultant %></td>
        <td><%= link_to 'Edit', edit_consultant_path(consultant) %></td>
        <td><%= link_to 'Destroy', consultant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

