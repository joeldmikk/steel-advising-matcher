<p id="notice"><%= notice %></p>

<h1>Consultants</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th style="width: 300px;">Talents</th>
      <th>Clients</th>
      <th>Fee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @consultants.each do |consultant| %>
      <tr>
        <td><%= consultant.name %></td>
        <td> 
          <%= react_component("TalentMatrix", { mode: 'inline', selected: consultant&.talents, context: consultant.id }) %>
        </td>
        <td>
          <% consultant.clients.each do |client| %>
              <%= link_to client.name, client_path(client) %>
           <% end %>
        </td>
        <td><%= consultant.fee %></td>
        <td><%= link_to 'Show', consultant %></td>
        <td><%= link_to 'Edit', edit_consultant_path(consultant) %></td>
        <td><%= link_to 'Destroy', consultant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="btn btn-primary">
  <%= link_to 'New Consultant', new_consultant_path, class: 'btn' %>
</div>
