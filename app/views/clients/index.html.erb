<p id="notice"><%= notice %></p>

<h1>Clients</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Referrer</th>
      <th>Consultant</th>
      <th>Notes</th>
      <th style="width: 300px;">Needs</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.email %></td>
        <td><%= client.referral_source %></td>
        <td>
          <% if client.consultant %>
            <%= link_to client.consultant.name, consultant_path(client.consultant) %>
          <% end %>
        
        </td>
        <td><%= client.notes %></td>
        <td> 
          <%= react_component("TalentMatrix", { mode: 'inline', selected: client&.talents, context: client.id }) %>
        </td>
        <td><%= link_to 'Show', client %></td>
        <td><%= link_to 'Edit', edit_client_path(client) %></td>
        <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="btn btn-primary">
  <%= link_to 'New Client', new_client_path, class: 'btn' %>
</div>
