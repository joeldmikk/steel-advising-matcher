<%= bootstrap_form_with(model: client, local: true) do |form| %>
  <% if client.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>

      <ul>
        <% client.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.text_area :notes %>
  </div>

  <div class="field">
    <%= form.select :consultant_id, Consultant.all.collect { |c| [c.name, c.id] }, { include_blank: true } %>
  </div>

  <div class="field">
    <%= form.hidden_field :talents, label: "Requirements" %>
  </div>

  <%= react_component("TalentMatrix", { mode: 'form', talent_input_id: 'client_talents', selected: client&.talents, context: 'new-client' }) %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>